%table.datatable
  %thead
    %tr
      -#mongo# [_("Login"), _("Email"), _("Name"), _("Total MediaEntries"), _("Groups"), ""].collect do |s|
      - [_("Login"), _("Email"), _("Name"), _("Groups"), ""].collect do |s|
        %th= s
  %tbody
    - @users.each do |user|
      %tr
        -#mongo# [user.login, user.email, user.name, user.media_entries.count, user.groups.join(', ')].each do |s|
        - [user.login, user.email, user.name, user.groups.join(', ')].each do |s|
          %td= s
        %td.with_actions
          = link_to _("Edit"), edit_admin_user_path(user), :class => "buttons", :remote => true, :"data-type" => "html"
          = link_to _("Switch to"), switch_to_admin_user_path(user), :class => "buttons"
