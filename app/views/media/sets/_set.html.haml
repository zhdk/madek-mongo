:ruby
  case set.class.name
    when "Media::Project"
      thumb_class = "thumb_box_project"
      tab_title = _("Projekt")
      content_title = _("Projekt")
      icon_class = "icon_project"
    else
      thumb_class = "thumb_box_set"
      tab_title = _("Set")
      content_title = _("Set")
      icon_class = "icon_set"
  end

%section#content_head
  .container_12.clearfix
    #page_head
      .grid_3
        #set_info
          %div.item_box_set
            %div.item_permission_set
              =#mongo# TODO display_permission(set, :icon)
            %div{:class => thumb_class}
              = thumb_for(set, :small_125)
        #set_actions
          - if @can_edit_set
            = display_edit_icon(set, current_user)
            = display_delete_icon(set, current_user)
        =#mongo# TODO render :partial => "media_entries/browsing"
      .grid_9
        #detail_specification.tabs
          %ul
            %li
              = link_to tab_title, "#info_tab"
            %li
              = link_to _("Zugriffsberechtigungen"), edit_permissions_resource_path(set)
            - if set.is_a?(Media::Project)
              %li
                = link_to _("Auszug"), "#abstract_tab"
            - if set.is_a?(Media::Project)
              %li
                = link_to _("Vokabular"), "#vocabulary_tab"
              %li
                / = link_to _("Vokabular Browser"), browse_media_set_path(set), :class => "vocabulary_tab_browse"
          #info_tab.clearfix
            - context = Meta::Context.media_set
            = display_meta_data_for(set, context)
          - if set.is_a?(Media::Project)
            #abstract_tab.clearfix
              %p
                Diese Metadaten wurden am häufigsten vergeben. Sie zeigen den thematischen Schwerpunkt des Projekts an.
              = display_project_abstract_slider(set, @paginated_media_entry_ids.total_entries)
              = display_project_abstract(set, (@paginated_media_entry_ids.total_entries * 30 / 100), @_media_entry_ids)
          - if set.is_a?(Media::Project)
            #vocabulary_tab.clearfix
              = display_project_vocabulary(set, @_media_entry_ids)

%section#content_body_set
  %div.page_title_left
    %div{:class => icon_class}
    = content_title
    %span=#mongo# TODO "#{@paginated_media_entry_ids.total_entries} von #{set.media_entries.count} Medieneinträge für Sie sichtbar"
  .clear
  
  =#mongo# TODO ?? render :partial => "resources/index"
  = render :partial => "resources/templates"
